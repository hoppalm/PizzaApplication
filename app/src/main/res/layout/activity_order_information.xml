<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.pizzaapplication.app.OrderInformationActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Order Information"
            android:id="@+id/textView" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" android:id="@+id/radioGroup">
    </RadioGroup>
    <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery"
            android:id="@+id/deliveryButton"
            android:layout_marginTop="47dp"
            android:layout_toStartOf="@+id/pickUpButton"
            android:layout_toLeftOf="@+id/pickUpButton"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick Up"
            android:id="@+id/pickUpButton"
            android:layout_alignTop="@+id/deliveryButton" android:layout_centerHorizontal="true"/>
    <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Pick Up"
                 android:id="@+id/radioButton3"
                 android:layout_alignBottom="@+id/pickUpButton" android:layout_alignParentRight="true"
                 android:layout_alignParentEnd="true"/>
</RelativeLayout>
